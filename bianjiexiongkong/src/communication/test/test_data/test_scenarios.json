  "test_environment": {
    "network_config": {
      "vehicle_port": 8888,
      "helmet_port": 8889,
      "ip_address": "127.0.0.1",
      "timeout": 200
    },
    "performance_metrics": {
      "packet_loss_threshold": 1.0,
      "latency_threshold": 50.0,
      "throughput_threshold": 1000.0,
      "cpu_usage_threshold": 80.0,
      "memory_usage_threshold": 512.0
    },
    "validation_criteria": {
      "protocol_compliance": true,
      "crc_validation": true,
      "byte_order_validation": true,
      "data_range_validation": true,
      "frequency_validation": true
    }
  },
  "test_execution": {
    "parallel_tests": false,
    "test_timeout": 7200,
    "retry_count": 3,
    "log_level": "info",
    "output_format": "json",
    "report_generation": true
  }
}

