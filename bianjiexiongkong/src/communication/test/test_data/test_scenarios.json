{
  "test_scenarios": {
    "basic_communication": {
      "name": "基础通信测试",
      "description": "测试基本的UDP通信功能",
      "duration": 60,
      "components": {
        "vehicle_simulator": {
          "enabled": true,
          "scenario": "normal",
          "frequency": 20.0
        },
        "helmet_receiver": {
          "enabled": true,
          "scenario": "normal",
          "head_tracking_frequency": 100.0,
          "voice_text_frequency": 1.0,
          "voice_command_frequency": 0.5
        }
      },
      "expected_results": {
        "packet_loss_rate": "< 1%",
        "latency": "< 10ms",
        "ack_success_rate": "> 95%"
      }
    },
    "stress_test": {
      "name": "压力测试",
      "description": "高频率数据传输测试",
      "duration": 300,
      "components": {
        "vehicle_simulator": {
          "enabled": true,
          "scenario": "normal",
          "frequency": 100.0
        },
        "helmet_receiver": {
          "enabled": true,
          "scenario": "rapid_movement",
          "head_tracking_frequency": 1000.0,
          "voice_text_frequency": 10.0,
          "voice_command_frequency": 5.0
        }
      },
      "expected_results": {
        "packet_loss_rate": "< 5%",
        "latency": "< 50ms",
        "ack_success_rate": "> 90%"
      }
    },
